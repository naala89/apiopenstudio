<!-- Delete account modal -->
<div id="modal-user-role-delete" class="modal">
  <form method="post" action="/user/role/delete" id="user-role-delete">
    <input type="hidden" name="urid" value="">
    <div class="modal-content">
      <h4>Delete User role</h4>
      <p>Are you sure you want to delete this role?</p>
      <div class="row">
        <div class="col s4">Username: <span class="user"></span></div>
        <div class="col s4">Role: <span class="role"></span></div>
      </div>
      <div class="row">
        <div class="col s4">Account: <span class="acc"></span></div>
        <div class="col s4">Application: <span class="app"></span></div>
      </div>
      <div class="row">
        <div class="input-field col">
          <a class=" modal-action modal-close waves-effect waves-green btn-flat">Cancel</a>
          <button class="btn waves-effect waves-light red" type="submit">DELETE</button>
        </div>
      </div>
    </div>
  </form>
</div>
