{% extends "page.twig" %}

{% set title="User roles" %}

{% block content %}
  <div class="row">
    <p>Manage your user roles here. View, invite, edit and remove user roles.</p>
  </div>
  <div class="row">
    <form method="get" action="/user/roles">
      <div class="col s1 ">
        <a class="btn-floating btn-large waves-effect waves-light green modal-trigger hoverable" href="#modal-user-role-create"><i class="material-icons">add</i></a>
      </div>
      <div class="col s2">
        <div class="input-field">
          <select class="input-field" name="uid">
            <option value="">All</option>
            {% for uid, user in users %}
              <option value="{{ uid }}">{{ user.username }}</option>
            {% endfor %}
          </select>
          <label for="uid">Username</label>
        </div>
      </div>
      <div class="col s2">
        <div class="input-field">
          <select class="input-field" name="accid">
            <option value="">All</option>
            {% for account in accounts %}
              <option value="{{ account.accid }}" {% if params.accid == account.accid %}selected{% endif %}>{{ account.name }}</option>
            {% endfor %}
          </select>
          <label for="accid">Account</label>
        </div>
      </div>
      <div class="col s2">
        <div class="input-field">
          <select class="input-field" name="appid">
            <option value="">All</option>
            {% for appid, application in applications %}
              <option value="{{ appid }}" {% if params.appid == appid %}selected{% endif %}>{{ application.name }}</option>
            {% endfor %}
          </select>
          <label for="appid">Application</label>
        </div>
      </div>
      <div class="col s3">
        <div class="input-field">
          <select class="input-field" name="rid">
            <option value="">All</option>
            {% for rid, role in roles %}
              <option value="{{ rid }}" {% if params.rid == rid %}selected{% endif %}>{{ role }}</option>
            {% endfor %}
          </select>
          <label for="rid">Role</label>
        </div>
      </div>
      <div class="input-field col s2">
        <button class="btn waves-effect waves-light" type="submit">Filter
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
  <div class="row teal lighten-1 white-text">
    <div class="col col-height s2 valign-wrapper">Username</div>
    <div class="col col-height s2 valign-wrapper">Email</div>
    <div class="col col-height s2 valign-wrapper">Account</div>
    <div class="col col-height s2 valign-wrapper">Application</div>
    <div class="col col-height s2 valign-wrapper">Role</div>
    <div class="col col-height s2">Actions</div>
  </div>
  {% for user_role in user_roles %}
    <div class="row hoverable">
      <div class="col col-height s2 valign-wrapper truncate"><a href="/users?keyword={{ users[user_role.uid].username }}">{{ users[user_role.uid].username }}</a></div>
      <div class="col col-height s2 valign-wrapper truncate"><a href="/users?keyword={{ users[user_role.uid].email }}">{{ users[user_role.uid].email }}</a></div>
      <div class="col col-height s2 valign-wrapper truncate"><a href="/accounts?keyword={{ accounts[user_role.accid] }}">{{ accounts[user_role.accid].name }}</a></div>
      <div class="col col-height s2 valign-wrapper truncate"><a href="/applications?keyword={{ applications[user_role.appid].name }}">{{ applications[user_role.appid].name }}</a> </div>
      <div class="col col-height s2 valign-wrapper truncate">{{ roles[user_role.rid] }}</div>
      <div class="col col-height s2 valign-wrapper">
        <a class="btn-floating btn-small white hoverable">
          <i class="material-icons modal-user-role-delete-trigger black-text" urid="{{ user_role.urid }}" user="{{ users[user_role.uid].username }}" acc="{{ accounts[user_role.accid] }}" app="{{ applications[user_role.appid].name }}" role="{{ roles[user_role.rid] }}" title="Delete this user role.">delete</i>
        </a>
      </div>
    </div>
  {% endfor %}

  {% include 'modals/user_role_create.twig' %}
  {% include 'modals/user_role_delete.twig' %}

{% endblock %}